<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahBarang">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/as"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextKode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Barang" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/as1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/as">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNamaB"
            android:hint="Nama Barang"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/as2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/as1">

        <EditText
            android:id="@+id/editTextSatuan"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:hint="Harga Satuan" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buttonAddB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="Tambah Barang" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="Kembali" />

</RelativeLayout>