<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilBarang">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextId"
            android:hint="ID "/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/asd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asd">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextKode"
            android:hint="Kode Barang"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/asd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asd1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNamaBr"
            android:hint="Nama Barang"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/asd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asd2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHarga"
            android:hint="Harga Satuan"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Barang"
        android:id="@+id/buttonUpdateB"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Barang"
        android:id="@+id/buttonDeleteB"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>